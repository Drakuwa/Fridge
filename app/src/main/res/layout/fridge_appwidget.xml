<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_item_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#8BC34A"
            android:drawableLeft="@drawable/ic_profile_fridge"
            android:drawableStart="@drawable/ic_profile_fridge"
            android:gravity="start|center_vertical"
            android:padding="@dimen/padding_normal"
            android:text="@string/app_name"
            android:textColor="@color/text_icons"
            android:textSize="@dimen/text_action_size" />

        <TextView
            android:id="@+id/text_notes_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF9800"
            android:drawableLeft="@drawable/ic_profile_note"
            android:drawableStart="@drawable/ic_profile_note"
            android:gravity="start|center_vertical"
            android:padding="@dimen/padding_normal"
            android:text="@string/app_name"
            android:textColor="@color/text_icons"
            android:textSize="@dimen/text_action_size" />
    </LinearLayout>

    <StackView
        android:id="@+id/stack_view_fridge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:loopViews="true" />

    <TextView
        android:id="@+id/empty_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_background"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="@string/hint_no_items_widget"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
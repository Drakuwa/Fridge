<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/pull_to_refresh_sync"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/holder_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/material_background"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="@dimen/profile_image_size"
                android:layout_height="@dimen/profile_image_size"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/padding_normal"
                android:layout_marginEnd="@dimen/padding_normal"
                android:layout_marginStart="@dimen/padding_normal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/web_hi_res_512" />

            <com.app.afridge.views.AdvancedTextView
                android:id="@+id/text_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_normal"
                android:text="@string/app_name"
                android:textColor="@color/text_icons"
                android:textSize="@dimen/text_size_large"
                font:customFont="@string/font_light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.app.afridge.views.AdvancedTextView
                android:id="@+id/text_item_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#8BC34A"
                android:drawableLeft="@drawable/ic_profile_fridge"
                android:drawableStart="@drawable/ic_profile_fridge"
                android:gravity="start|center_vertical"
                android:padding="@dimen/padding_normal"
                android:text="@string/app_name"
                android:textColor="@color/text_icons"
                android:textSize="@dimen/text_action_size"
                font:customFont="@string/font_light" />

            <com.app.afridge.views.AdvancedTextView
                android:id="@+id/text_notes_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF9800"
                android:drawableLeft="@drawable/ic_profile_note"
                android:drawableStart="@drawable/ic_profile_note"
                android:gravity="start|center_vertical"
                android:padding="@dimen/padding_normal"
                android:text="@string/app_name"
                android:textColor="@color/text_icons"
                android:textSize="@dimen/text_action_size"
                font:customFont="@string/font_light" />
        </LinearLayout>

        <com.app.afridge.views.AdvancedTextView
            android:id="@+id/text_random_stat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_random"
            android:drawableStart="@drawable/ic_random"
            android:gravity="start|center_vertical"
            android:padding="@dimen/padding_normal"
            android:text="@string/app_name"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_large"
            font:customFont="@string/font_light" />

        <com.app.afridge.views.AdvancedTextView
            android:id="@+id/text_login_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_small"
            android:gravity="center"
            android:padding="@dimen/padding_normal"
            android:text="@string/hint_login_description"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_medium"
            font:customFont="@string/font_light" />

        <com.app.afridge.views.AdvancedTextView
            android:id="@+id/button_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/padding_small"
            android:background="#3b5998"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="@dimen/padding_normal"
            android:text="@string/facebook"
            android:textColor="@color/text_icons"
            android:textSize="@dimen/text_button_size"
            android:visibility="gone"
            font:customFont="@string/font_light" />

        <com.app.afridge.views.AdvancedTextView
            android:id="@+id/button_twitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/padding_small"
            android:background="#4099ff"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="@dimen/padding_normal"
            android:text="@string/twitter"
            android:textColor="@color/text_icons"
            android:textSize="@dimen/text_button_size"
            android:visibility="gone"
            font:customFont="@string/font_light" />

        <com.app.afridge.views.AdvancedTextView
            android:id="@+id/button_gplus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/padding_small"
            android:background="#dd4b39"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="@dimen/padding_normal"
            android:text="@string/gplus"
            android:textColor="@color/text_icons"
            android:textSize="@dimen/text_button_size"
            android:visibility="gone"
            font:customFont="@string/font_light" />


        <com.app.afridge.views.AdvancedTextView
            android:id="@+id/text_last_synced"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/padding_small"
            android:layout_weight="1"
            android:gravity="end|bottom"
            android:text="@string/last_synced"
            android:textColor="@color/text_secondary"
            font:customFont="@string/font_light" />

        <com.app.afridge.views.AdvancedTextView
            android:id="@+id/button_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_small"
            android:background="@color/primary"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="@dimen/padding_normal"
            android:text="@string/logout"
            android:textColor="@color/text_icons"
            android:textSize="@dimen/text_button_size"
            font:customFont="@string/font_light" />

    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>